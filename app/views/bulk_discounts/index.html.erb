<div class="discount-index">
  <h3><%= "Your Bulk Discounts" %></h3>
  <p><%= link_to "Create New Bulk Discount", new_merchant_bulk_discount_path(@merchant) %></p>

  <div class="bulkdiscounts"><% @bulk_discounts.each do |bulk_discount| %>
    <div id="discount-<%=bulk_discount.id%>">
      <p>Bulk Discount: <%= bulk_discount.id %>
       -- save <%= bulk_discount.discount_percent %>%
       when ordering <%= bulk_discount.threshold %> items.</p>
      <p><%= link_to "View this Discount" , merchant_bulk_discount_path(@merchant, bulk_discount) %>
         <%= button_to "Delete", merchant_bulk_discount_path(@merchant, bulk_discount), method: :delete %> </p>
    </div>
    <% end %>
  </div>
</div>

 <div class="upcoming_holidays">
  <h2>Upcoming Holidays:<br></h2>
